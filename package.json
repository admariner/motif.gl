{
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci --hoist --strict -- --legacy-peer-deps && lerna link --force-local",
    "motif": "lerna run start --scope=@cylynx/motif --stream",
    "demo": "lerna run start --scope=motif-demo --stream",
    "clean": "lerna clean && npm run rm-package-lock",
    "rm-package-lock": "rm -rf ./package-lock.json ./packages/*/package-lock.json",
    "unit": "lerna run test --scope @cylynx/motif --stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cylynx/motif.gl"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/*/src/**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "./packages/*/src/**/*.+(js|jsx|ts|tsx|json|css|md)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.2.1",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.3"
  },
  "workspaces": [
    "packages/**"
  ]
}
