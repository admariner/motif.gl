    }
  },
  "lint-staged": {
    "./packages/*/src/**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "./packages/*/src/**/*.+(js|jsx|ts|tsx|json|css|md)": [
