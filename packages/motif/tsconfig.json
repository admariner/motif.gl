{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "noImplicitAny": false,
    "noEmit": false,
    "types": ["@types/react"],
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.+(test|spec).+(ts|tsx|js|jsx)",
    "cypress",
    "index.html"
  ]
}
