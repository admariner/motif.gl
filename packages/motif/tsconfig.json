{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "noImplicitAny": false,
    "noEmit": false,
    "types": ["@types/node", "@types/react", "@types/jest"],
    "noEmitOnError": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.json",
    "cypress",
    "index.html"
  ]
}
